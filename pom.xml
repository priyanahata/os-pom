    <!-- versions of libraries used in maven plugins which don't see the right version on the class path -->
    <properties>
        <eclipselink.version>2.6.3</eclipselink.version>
        <jrebel.version>1.1.6</jrebel.version>
        <weld.version>2.2.13.Final</weld.version>
        <hibernate-validator.version>5.1.2.Final</hibernate-validator.version>                
        <maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
        <build.timestamp>${maven.build.timestamp}</build.timestamp>
        <BUILD_NUMBER>LOCAL</BUILD_NUMBER>
        <java.version>1.8</java.version>
    </properties>

    <repositories>
        <repository>
            <id>central</id>
            <name>Maven Repository Switchboard</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/maven2</url>

            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        
        <repository>
            <id>sonatype-snapshots</id>
            <name>sonatype-snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>anahata</id>
            <name>Anahata Private Enterprise Repository</name>
            <url>http://repo.anahata.uno/artifactory/anahata-public/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <name>Maven Repository Switchboard</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/maven2</url>

            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>

        <pluginRepository>
            <id>anahata</id>
            <name>Anahata Private Enterprise Repository</name>
            <url>http://artifactory.anahata-it.com.au/artifactory/anahata-public/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jboss.jandex</groupId>
                <artifactId>jandex-maven-plugin</artifactId>
                <version>1.0.3</version>
                <executions>
                    <execution>
                        <id>make-index</id>
                        <goals>
                            <goal>jandex</goal>
                        </goals>
                        <configuration>
                            <fileSets>
                                <fileSet>
                                    <directory>${project.build.directory}/classes</directory>
                                    <excludes>
                                        <exclude>**/*_mm*</exclude>
                                    </excludes>
                                </fileSet>
                            </fileSets>
                        </configuration>                        
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>1.7</version>
                <configuration>
                    <licenseName>apache_v2</licenseName>
                    <organizationName><![CDATA[<A HREF="http://www.anahata.uno">Anahata Technologies Pty Ltd</A>]]></organizationName>
                    <lineLength>120</lineLength>
                    <inceptionYear>2012</inceptionYear>
                    <projectName>${project.name}</projectName>
                </configuration>
            </plugin>  
                      
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>

                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <!--
                        <plugin>
                            <artifactId>maven-resources-plugin</artifactId>
                            <version>3.0.1</version>
                            <executions>
                                <execution>
                                    <phase>pre-site</phase>
                                    <goals>
                                        <goal>copy-resources</goal>
                                    </goals>
                                    <configuration>
                                        <outputDirectory>/home/ambasoft/Desktop/trial/${project.artifactId}/${project.parent.artifactId}/site</outputDirectory>
                                        <resources>
                                            <resource>
                                                <directory>${project.parent.basedir}/src/</directory>
                                                <filtering>true</filtering>
                                            </resource>
                                        </resources>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
            -->
            <plugin>
                <groupId>uno.anahata</groupId>
                <artifactId>hiranya</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>rundoc</goal>
                        </goals>
                        <configuration>
                            <javaDocFolder>/site/</javaDocFolder>
                            <adWordsScript>Replace content with google ads</adWordsScript>
                            <donateWithPaypal>Donate With Paypal</donateWithPaypal>
                            <headerContent>../../../header.html</headerContent>
                            <footerContent>../../../footer-home.html</footerContent>
                            <backLinks>
                                <backLink>
                                    <anchorText>Anahata</anchorText>
                                    <href>http://www.anahata.com.au</href>
                                </backLink>
                                <backLink>
                                    <anchorText>Anahata Developers</anchorText>
                                    <href>http://www.anahata.com.au/our-team.html</href>
                                </backLink>
                            </backLinks>
                            <project></project>
                        </configuration>
                    </execution>
                    <execution>
                        <id>sitecopy</id>
                        <goals>
                            <goal>sitecopy</goal>
                        </goals>
                        <configuration>
                            <siteFolder>src/site</siteFolder>
                            <project></project>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>uno.anahata</groupId>
                <artifactId>gitpush</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <goals>
                            <goal>gitpush</goal>
                        </goals>
                        <configuration>
                            <checkoutPath>/opt/anahata-os-docs/${project.artifactId}</checkoutPath>
                            <osDocsFolder>/home/wwwtesta/opensource/${project.artifactId}</osDocsFolder>
                            <!--<checkoutPath>/home/ambasoft/Desktop/anahata-os-docs/${project.artifactId}_docs/</checkoutPath>-->
                            <sitePath>target/staging/${project.artifactId}</sitePath>
                            <repository>${project.artifactId}.bitbucket.org.git</repository>
                            <repoUrl>ssh://git@bitbucket.org/anahata/</repoUrl>
                            <project></project>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>

    <!-- Note, the following reporting section is deprecated in maven 3.x
    and reports are under <build><plugins><plugin><maven-site-plugin>
    The reason for leaving it 'dead' here is because netbeans SQE plugin hasn't
    upgraded to the maven 3 layout and still expects this here to
    detect the projects checkstyle and findbugs connfiguration,
    I've opened the respective issue in SQE at kenai.com -->
